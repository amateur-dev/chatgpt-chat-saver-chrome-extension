{
  "manifest_version": 3,
  "name": "ChatGPT Chat Saver",
  "version": "1.0.0",
  "description": "Save ChatGPT conversations as PDF with full formatting preservation",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": [
        "libs/jspdf.umd.min.js",
        "libs/html2canvas.min.js",
        "content.js"
      ],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["libs/*", "icons/*"],
      "matches": ["https://chat.openai.com/*"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}